import "dotenv/config";
import { z } from "zod";

const envSchema = z.object({
  PORT: z.coerce.number().default(8000),
  NODE_ENV: z.enum(["development", "production", "test"]),
  HTTP_SECURE_OPTION: z.string(),
  ACCESS_CONTROL_ORIGIN: z.string(),
  {{#if db.enable}}DATABASE_URL: z.string(),{{/if}}
  {{#if useRedis}}REDIS_URI: z.string(),{{/if}}
  {{#if auth.enable}}
  ACCESS_TOKEN_LIFE: z.string(),
  REFRESH_TOKEN_LIFE: z.string(),
  ACCESS_TOKEN_SECRET: z.string(),
  REFRESH_TOKEN_SECRET: z.string(),
  GOOGLE_OAUTH_CLIENT_ID: z.string(),
  GOOGLE_OAUTH_CLIENT_SECRET: z.string(),
  {{/if}}
  {{#if smtp.enable}}
  MAILTRAP_HOST: z.string(),
  MAILTRAP_PORT: z.string(),
  MAILTRAP_USER: z.string(),
  MAILTRAP_PASS: z.string(),
  GMAIL_APP_USER: z.string(),
  GMAIL_APP_PASS: z.string(),
  {{/if}}
  SERVER_BASE_URI: z.string()
});

export const env = envSchema.parse(process.env);