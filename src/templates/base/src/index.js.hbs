import { env } from "./conf/env{{#if ts}}.js{{/if}}";
{{#if useSocket}}
import { server } from "./app{{#if ts}}.js{{/if}}";
{{else}}
import { app } from "./app{{#if ts}}.js{{/if}}";
{{/if}}
{{#if useMongodb}}
import connectDB from "./db/index{{#if ts}}.js{{/if}}";
{{/if}}

const port = env.PORT || 8000;

const main = async () => {
  {{#if useMongodb}}
  await connectDB();
  {{/if}}

  const serverInstance = {{#if useSocket}}server{{else}}app{{/if}}.listen(port, () => {
    console.log(`Server is listening on port ${port}`);
  });

  serverInstance.on("error", (error) => {
    console.error("Server failed to start:", error);
    process.exit(1);
  });
};

main().catch((error) => {
  console.error("{{#if useMongodb}}MongoDB connection failed{{else}}Server startup failed{{/if}}:", error);
  process.exit(1);
});