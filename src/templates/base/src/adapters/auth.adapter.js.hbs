export const findById = async ({{#if ts}}userId: string{{#if useMongodb}} | Types.ObjectId{{/if}}{{else}}userId{{/if}}) => {
  {{#if useMongodb}}
  const user = await UserModel.findById(toObjectId(userId));
  {{/if}}
  {{#if usePrisma}}
  const user = await prisma.user.findUnique({ where: { id: userId } });
  {{/if}}
  {{#if useDrizzle}}
  const user = await db.query.users.findFirst({
    where: eq(UserTable.id, userId),
  });
  {{/if}}
  {{#if useSequelize}}
  const { dataValues: user } = await User.findOne({
    where: { id: userId },
  });
  {{/if}}

  return user;
}

export const updateRefreshToken = async ({{#if ts}}user: IUser, refreshToken: string{{else}}user, refreshToken{{/if}}) => {
  {{#if usePrisma}}
  await prisma.user.update({
    where: { id: user.id },
    data: { refreshToken },
  });
  {{/if}}
  {{#if useMongodb}}
  await UserModel.findByIdAndUpdate(
    toObjectId(user._id),
    { $set: { refreshToken } },
    { new: true, runValidators: true }
  );
  {{/if}}
  {{#if useDrizzle}}
  await db
    .update(UserTable)
    .set({ refreshToken })
    .where(eq(UserTable.id, user.id));
  {{/if}}
  {{#if useSequelize}}
  await User.update({ refreshToken }, { where: { id: user.id } });
  {{/if}}
}

