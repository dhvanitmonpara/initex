{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "Node",
		"outDir": "dist",
		"rootDir": "src",
		"baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },
		{{#if useNodemailer}}
    "jsx": "react",
		{{/if}}
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"declaration": false,
		"skipLibCheck": true
	},
	"include": ["src/**/*"]
}
