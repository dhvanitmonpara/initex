{
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["ES2022"],
		"module": "ESNext",
		"moduleResolution": "Node",
		"outDir": "dist",
		"rootDir": "./",
		"baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },
		{{#if smtp.enable}}
    "jsx": "react",
		{{/if}}
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"declaration": false,
		"skipLibCheck": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	},
	"include": [
		"src/**/*",
		"docs/**/*",
		"scripts/**/*"
	]
}
