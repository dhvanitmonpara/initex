{
  "name": "@{{normalizedProjectName}}/server",
  "version": "1.0.0",
  "description": "",
  "main": "src/server.js",
  "type": "module",
  "private": true,
  "scripts": {
    "build": {{#if isBunRuntime}}"bun run build.ts"{{else}}"tsup"{{/if}},
    "start": "{{runtimeCommand}} dist/server.js",
    "dev": "{{#if isBunRuntime}}bun --watch{{else}}tsx{{/if}} src/server.ts",
    "seed": "{{#if isBunRuntime}}bun{{else}}tsx{{/if}} scripts/seed.ts",
    "typecheck": "tsc -p tsconfig.json --noEmit",
{{#if git}}    "prepare": "{{runtimeExecCommand}} husky",{{/if}}
{{#if noGit}}    "predev": "{{runtimeCommand}} run lint:fix",{{/if}}
    "prebuild": "{{runtimeCommand}} run lint:fix && {{#if usePrisma}}{{runtimeCommand}} run db:sync{{/if}}{{#if useSequelize}}{{runtimeCommand}} run db:migrate{{/if}}{{#if useDrizzle}}{{runtimeCommand}} run db:migrate{{/if}}",
{{#if db.enable}}
    "db:up": "docker compose -f infra/docker-compose.yml up -d",
    "db:down": "docker compose -f infra/docker-compose.yml down",
{{#if usePrisma}}    "db:sync": "{{runtimeExecCommand}} prisma generate && {{runtimeExecCommand}} prisma migrate deploy",{{/if}}
{{#if useSequelize}}    "db:migrate": "{{runtimeExecCommand}} sequelize-cli db:migrate",{{/if}}
{{#if useDrizzle}}    "db:migrate": "{{runtimeExecCommand}} drizzle-kit migrate",{{/if}}
{{/if}}
    "lint": "{{runtimeExecCommand}} biome check",
    "lint:fix": "{{runtimeExecCommand}} biome check --write"
  },
{{#if git}}
  "lint-staged": {
    "*.{js,ts,jsx,tsx,json,md}": "biome check --write"
  },
{{/if}}
  "dependencies": {},
  "devDependencies": {}
}