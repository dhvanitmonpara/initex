{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "type": "module",
  "scripts": {
    {{#if ts}}"build": {{#if isBunRuntime}}"bun run build.ts"{{else}}"tsup"{{/if}},{{/if}}
    "start": "{{runtimeCommand}} {{#if ts}}dist/{{else}}src/{{/if}}server.js",
    {{#if ts}}
    "dev": "{{#if isBunRuntime}}bun{{else}}tsx{{/if}} src/server.ts",
    {{else}}
    "dev": "{{runtimeCommand}} --watch src/server.js",
    {{/if}}
    {{#if db.enable}}
    "db:up": "docker compose -f infra/docker-compose.yml up -d",
    "db:down": "docker compose -f infra/docker-compose.yml down",
{{#if usePrisma}}  "db:sync": "{{runtimeExecCommand}} prisma generate && {{runtimeExecCommand}} prisma migrate deploy",{{/if}}
{{#if useSequelize}}  "db:migrate": "{{runtimeExecCommand}} sequelize-cli db:migrate",{{/if}}
{{#if useDrizzle}}  "db:migrate": "{{runtimeExecCommand}} drizzle-kit migrate",{{/if}}
    {{/if}}
    "lint": "{{runtimeExecCommand}} biome check",
    "lint-format": "{{runtimeExecCommand}} biome check --write",
    "predev": "{{runtimeCommand}} run lint-format",
{{#if ts}}  "prebuild": "{{runtimeCommand}} run lint-format{{#if usePrisma}} && {{runtimeCommand}} run db:sync{{/if}}{{#if useSequelize}} && {{runtimeCommand}} run db:migrate{{/if}}{{#if useDrizzle}} && {{runtimeCommand}} run db:migrate{{/if}}",{{/if}}
    "prestart": "{{runtimeCommand}} run lint-format{{#if usePrisma}} && {{runtimeCommand}} run db:sync{{/if}}{{#if useSequelize}} && {{runtimeCommand}} run db:migrate{{/if}}{{#if useDrizzle}} && {{runtimeCommand}} run db:migrate{{/if}}"
  },
  "dependencies": {},
  "devDependencies": {}
}