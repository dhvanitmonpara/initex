{
	"name": "git",
	"label": "git",
	"description": "Git Repo setup",
	"destination": ".",
	"devDependencies": [
		"husky",
		"@commitlint/cli",
		"@commitlint/config-conventional",
		"lint-staged"
	],
	"commands": [
		{
			"cmd": "git",
			"args": ["init"]
		},
		{
			"cmd": "npx",
			"args": ["husky"]
		},
		{
			"cmd": "chmod",
			"args": ["+x", ".husky/commit-msg"],
			"silent": true
		},
		{
			"cmd": "chmod",
			"args": ["+x", ".husky/pre-commit"],
			"silent": true
		}
	]
}
