services:
  mongo:
    image: mongo
    restart: always
    container_name: mongo
    ports:
      - "27017:27017"
    environment:
      MONGO_INITDB_ROOT_USERNAME: {{dbUser}}
      MONGO_INITDB_ROOT_PASSWORD: {{dbPassword}}
    volumes:
      - mongo_data:/data/db
    healthcheck:
      test: ["CMD", "mongosh", "--username={{dbUser}}", "--password={{dbPassword}}", "--eval", "db.adminCommand('ping')"]
      interval: 10s
      timeout: 5s
      retries: 5

  {{#if useMultiCache}}redis:
    image: redis:7-alpine
    restart: always
    environment:
      REDIS_PASSWORD: {{redisPassword}}
    ports:
      - "6379:6379"
    volumes:
      - redis-data:/data
      - ./redis.conf:/usr/local/etc/redis/redis.conf
    command: ["redis-server", "/usr/local/etc/redis/redis.conf"]
    healthcheck:
      test: ["CMD", "redis-cli", "-a", "{{redisPassword}}", "ping"]
      interval: 10s
      timeout: 5s
      retries: 5
  {{/if}}
  {{#if useValkey}}valkey:
    image: valkey/valkey:latest
    restart: always
    environment:
      VALKEY_PASSWORD: {{valkeyPassword}}
    ports:
      - "6380:6379"
    volumes:
      - valkey_data:/data
      - ./valkey.conf:/etc/valkey.conf
    command: ["valkey-server", "/etc/valkey.conf"]
    healthcheck:
      test: ["CMD", "valkey-cli", "-a", "{{valkeyPassword}}", "ping"]
      interval: 10s
      timeout: 5s
      retries: 5
  {{/if}}

volumes:
  {{#if useMultiCache}}redis-data:
    driver: local{{/if}}
  mongo_data:
    driver: local
  {{#if useValkey}}valkey_data:
    driver: local{{/if}}
