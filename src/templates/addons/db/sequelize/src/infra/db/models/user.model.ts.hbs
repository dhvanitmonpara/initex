import { DataTypes } from "sequelize";
import { sequelize } from "@/infra/db";

const User = sequelize.define("users", {
  id: {
    type: DataTypes.INTEGER,
    autoIncrement: true,
    primaryKey: true,
  },
  username: {
    type: DataTypes.STRING,
    allowNull: false,
  },
  email: {
    type: DataTypes.STRING,
    allowNull: false,
  },
  password: {
    type: DataTypes.STRING,
    allowNull: false,
  },
  roles: {
    type: DataTypes.ARRAY(DataTypes.ENUM("user", "admin", "superadmin")),
    defaultValue: ["user"],
  },
  authType: {
    type: DataTypes.ENUM("oauth", "manual"),
    defaultValue: "manual",
  },
  refreshToken: {
    type: DataTypes.STRING,
  },
});

export default User;
