services:
  db:
    image: {{#if useMysql}}"mysql:8.0"{{else}}"postgres:17"{{/if}}
    restart: always
    environment:
      {{#if useMysql}}
      MYSQL_ROOT_PASSWORD: {{dbPassword}}
      MYSQL_DATABASE: {{dbName}}
      MYSQL_USER: {{dbUser}}
      MYSQL_PASSWORD: {{dbPassword}}
      {{else}}
      POSTGRES_USER: {{dbUser}}
      POSTGRES_PASSWORD: {{dbPassword}}
      POSTGRES_DB: {{dbName}}
      {{/if}}
    ports:
      {{#if useMysql}}
      - "3306:3306"
      {{else}}
      - "5432:5432"
      {{/if}}
    volumes:
      - {{#if useMysql}}"mysql_data:/var/lib/mysql"{{else}}"postgres_data:/var/lib/postgresql/data"{{/if}}
    healthcheck:
      {{#if useMysql}}
      test: ["CMD", "mysqladmin", "ping", "-h", "127.0.0.1", "-p{{dbPassword}}"]
      {{else}}
      test: ["CMD-SHELL", "pg_isready -U {{dbUser}}"]
      {{/if}}
      interval: 10s
      timeout: 5s
      retries: 5

  adminer:
    image: adminer
    restart: always
    depends_on:
      db:
        condition: service_healthy
    ports:
      - "8080:8080"

volumes:
  {{#if useMysql}}mysql_data:{{else}}postgres_data:{{/if}}
