generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = {{dbType}}
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id                   String                  @id @default(uuid())
  username             String
  email                String
  password             String?
  authType             AuthType
  refreshToken         String?

  createdAt            DateTime             @default(now())
  updatedAt            DateTime             @default(now()) @updatedAt()
}

enum AuthType {
  oauth
  manual
}