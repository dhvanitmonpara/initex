{{#if useMongodb}}
import type { Types } from "mongoose";
{{/if}}

declare global {
  namespace Express {
    interface Request {
      user?: {
        {{#if useMongodb}}_id: Types.ObjectId{{else}}id: string{{/if}};
        username: string;
        email: string;
        password?: string;
        refreshToken: string;
      };
      admin?: {
        {{#if useMongodb}}_id: Types.ObjectId{{else}}id: string{{/if}};
      };
    }
  }
}