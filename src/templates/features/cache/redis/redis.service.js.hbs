import { Redis } from "ioredis";
import { env } from {{#if ts}}"@/conf/env"{{else}}"../conf/env.js"{{/if}};

if (typeof Redis === "undefined") throw new Error("Redis is not installed");
if (!env.REDIS_URI) throw new Error("REDIS_URI environment variable is not set");
const redisClient = new Redis(env.REDIS_URI);

redisClient.on("connect", () => {
  console.log("Redis connected");
});

redisClient.on("error", (err) => {
  console.error("Redis connection error:", err);
});

export default redisClient;